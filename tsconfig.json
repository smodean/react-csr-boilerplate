{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es6", "esnext", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "pretty": true,
    "strict": true,
    "removeComments": true,
    "target": "esnext",
    "typeRoots": ["@types", "node_modules/@types", "src/shared/@types"],
    "types": ["node", "jest"],
    "paths": {
      "@browser/*": ["src/browser/*"],
      "@shared/*": ["src/shared/*"],
    }
  },
  "exclude": ["node_modules"]
}