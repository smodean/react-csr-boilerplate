{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "esnext", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "pretty": true,
    "strict": true,
    "removeComments": true,
    "target": "esnext",
    "typeRoots": ["src/@types", "@types", "node_modules/@types"],
    "types": ["node", "jest"],
    "paths": {
      "@@EpicType": ["models/EpicType"],
      "@@LocalizationDictionary": ["models/LocalizationDictionary"],
      "@@RootAction": ["models/RootAction"],
      "@@RootState": ["models/RootState"],
      "@App": ["App"],
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@hooks/*": ["hooks/*"],
      "@localization": ["localization"],
      "@localization/*": ["localization/*"],
      "@models/*": ["models/*"],
      "@pages/*": ["pages/*"],
      "@resources/*": ["resources/*"],
      "@Routes": ["Routes"],
      "@store/*": ["store/*"],
      "@storeData/*": ["store/data/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules"]
}